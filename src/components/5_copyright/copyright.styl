.copyright
    position relative
    width 445px
    margin 70px auto 40px auto
    font-weight 200
    color #000
    text-decoration none
    display block
    padding 4px
    opacity 1
    animate 1000 ease-in-out
    &.loading
        opacity 0
    > img
        float left
        margin-right 12px
    > span
        margin-top: 5px;
        display block

@media all and (max-width 1200px)
    .copyright__layout_2
        margin 100px 0 0 0
    .copyright__layout_3
        display none
