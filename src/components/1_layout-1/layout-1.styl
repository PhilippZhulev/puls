.layout-1
    position relative
    padding-top 5px
    padding-bottom 30px
.layout-1__bg-parallax
    position fixed
    width: 106%
    height 100%
    background url('../img/1_layout-1/layout_1__bg-parralax.jpg') center no-repeat;
    background-size cover
    top 0
    animation-name bg-parallax__animated
    animation-duration 15s
    animation-iteration-count: infinite
    animation-timing-function ease-in-out

@keyframes bg-parallax__animated
    0%
        t-translateX 0
    50%
        t-translateX -50px
    100%
        t-translateX 0
