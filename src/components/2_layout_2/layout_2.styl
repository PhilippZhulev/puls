.layout-2__blur-bg
    background url('../img/2_layout_2/layer_2_bg-blur.png') center no-repeat
    background-size 1920px
    width 100%
    position absolute
    top 0
    height 100%

.layout-2__bg-circle-1
    width 636px
    height 667px
    position absolute
    right 0
    bottom 0
    background url('../img/2_layout_2/layer_2_bg-circle-1.png') center no-repeat
    animation-name circle_animated-1
    animation-duration 5s
    animation-iteration-count: infinite
    animation-timing-function linear
.layout-2__bg-circle-2
    width 564px
    height 422px
    position absolute
    left 0
    top 0
    background url('../img/2_layout_2/layer_2_bg-circle-2.png') center no-repeat
    animation-name circle_animated-2
    animation-duration 5s
    animation-delay 500ms
    animation-iteration-count: infinite
    animation-timing-function linear

@keyframes circle_animated-1
    0%
        transform translateX(0) translateY(0)
    20%
        transform translateX(30px) translateY(15px)
    40%
        transform translateX(60px) translateY(30px)
    60%
        transform translateX(30px) translateY(60px)
    80%
        transform translateX(15px) translateY(30px)
    100%
        transform translateX(0px)  translateY(0px)
@keyframes circle_animated-2
    0%
        transform translateX(0) translateY(0)
    20%
        transform translateX(-30px) translateY(-15px)
    40%
        transform translateX(-60px) translateY(-30px)
    60%
        transform translateX(-30px) translateY(-60px)
    80%
        transform translateX(-15px) translateY(-30px)
    100%
        transform translateX(0px)  translateY(0px)
