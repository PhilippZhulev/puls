.app-block
    width 530px
    position relative
    margin 0 auto
    height 80px

.app-block__item-1,
.app-block__item-2
    width 242px
    display block
    height 80px
    background #000
    border-radius 4px
    border-bottom 5px solid #d0021b

.app-block__item-1
    float left
    background #000 url("../img/7_app-block/app-block__google.png") center no-repeat
.app-block__item-2
    float right
    background #000 url("../img/7_app-block/app-block__App_Store.png") center no-repeat
