.app-block
    width 530px
    position relative
    margin 0 auto
    height 80px
    opacity 1
    animate 1000 ease-in-out
    &.loading
        opacity 0
    >
    .clear-fix
        height 558px

.app-block__item-1,
.app-block__item-2
    width 242px
    display block
    height 80px
    background #000
    border-radius 4px
    border-bottom 5px solid #d0021b
    animate 200 ease-in-out
    &:hover
        border-bottom 1px solid #d0021b
        opacity 0.8

.app-block__item-1
    float left
    background #000 url("../img/7_app-block/app-block__google.png") center no-repeat
.app-block__item-2
    float right
    background #000 url("../img/7_app-block/app-block__App_Store.png") center no-repeat

.app-block__layout_2
    width: 100%;
    float: right;
    .app-block__item-1, .app-block__item-2
        width 278px
.app-block__layout_3
    width: 640px;
    margin 33px 0 0 0
    .app-block__item-1, .app-block__item-2
        width 278px
@media all and (max-width 1200px)
    .app-block__layout_2,
    .app-block__layout_3
        width 100%
        margin 80px auto 0 auto
        max-width 675px
        min-width 575px
        float left
@media all and (max-width 980px)
    .app-block__layout-1
        height auto
        width 100%
        .app-block__item-1,
        .app-block__item-2
            float none
            margin 0 auto
        .app-block__item-1
            margin-bottom 20px
