.fixed-header
    position fixed
    z-index 999
.sandwich__wrapper
    position relative
    &.active
        .sandwich__item-1
            transform: rotate(45deg) translate(13px, 13px);
        .sandwich__item-2
            transform: rotate(45deg) translate(13px, 13px);
            bottom auto
            opacity 0
        .sandwich__item-3
            transform: rotate(-45deg) translate(13px, -13px);
        .sandwich__menu
            width 850px
            visibility visible
            opacity 1
        .sandwich__menu__nav
            opacity 1
.sandwich
    width 55px
    height 40px
    cursor pointer
    position absolute
    margin-top 52px
    right 0
    Z-index 99
    .sandwich__item-1,
    .sandwich__item-2,
    .sandwich__item-3
        position absolute
        width 100%
        height 4px
        background #d0021b
        margin auto
        animate 300 ease-in-out
        &:nth-child(1)
            top 0
        &:nth-child(2)
            top 0
            bottom 0
        &:nth-child(3)
            bottom 0

.sandwich__menu
    width 0
    animate 300 ease-in-out
    visibility hidden
    opacity 0
    height 105px
    background #fff
    box-shadow 0px 11px 16px 0 rgba(0, 0, 0, 0.16)
    position absolute
    right -40px
    overflow hidden
    top 20px
    padding 35px
.sandwich__menu__nav
    opacity 0
    list-style none
    animate 100 ease-in-out
    padding 0
    margin 0
    white-space nowrap
    margin-top 7px
    >li
        display inline-block
        white-space nowrap
        animate 300 ease-in-out
        margin-right 55px
        &:hover,
        &.active
            t-scale 1.1
            > a
                color #d0021b
        > a
            color #000
            font-weight 200
            animate 300 ease-in-out
            white-space nowrap
            font-size 18px
            text-decoration none
