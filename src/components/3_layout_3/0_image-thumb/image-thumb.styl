.image-thumb
    padding-right 30px
    img
        width 100%
        display block
    h2
        font-size 36px
        font-weight 600
        margin-top 0
        margin-bottom 15px
        text-transform: uppercase;
.image-thumb__date
    span
        font-size 18px
        font-weight 400
    b
        font-weight 400
        font-size 18px
        padding-left 30px
.image-thumb__image
    margin-top 40px
    margin-bottom 30px
    border 5px
    box-shadow 0px 7px 15px 1px rgba(0, 0, 0, 0.34)
.image-thumb__stats
    width 100%
    height 60px
    background #fff
    padding 15px 22px
    ul
        list-style none
        margin 0
        padding 0
        float left
        &:nth-child(2)
            float right
        > li
            display table
            float left
            font-size 18px
            font-weight 200
            height 29px
            span
                display table-cell
                vertical-align middle
                padding-left 10px

@media all and (max-width 1200px)
    .image-thumb__image
        img
            width 100%
